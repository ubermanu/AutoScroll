{
  "manifest_version": 3,
  "name": "AutoScroll",
  "version": "6.0",
  "description": "This extension adds customizable autoscroll support to Chrome.",
  "minimum_chrome_version": "88",
  "icons": {
    "128": "icons/icon128.png",
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png"
  },
  "permissions": [
    "storage"
  ],
  "storage": {
    "managed_schema": "schema.json"
  },
  "options_page": "options_page.html",
  "content_scripts": [
    {
      "all_frames": false,
      "js": [
        "content_script.js"
      ],
      "matches": [
        "<all_urls>"
      ],
      "run_at": "document_end"
    }
  ]
}
